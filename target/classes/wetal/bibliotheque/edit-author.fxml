<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" prefHeight="530.0" prefWidth="1000.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/16" fx:controller="wetal.bibliotheque.ControllerEditAuthor">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="38.0" prefWidth="850.0" text="edit Author"
               textFill="#cc0707">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="authorName" maxWidth="850" prefHeight="40.0" prefWidth="750.0" promptText="name">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>
        <TextField fx:id="authorEmail" maxWidth="850" prefHeight="40.0" prefWidth="750.0" promptText="email">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>
        <Button fx:id="buttonUpdate" alignment="CENTER" contentDisplay="CENTER" maxWidth="750" mnemonicParsing="false"
                onAction="#updateAuthor" prefHeight="40.0" prefWidth="750.0" style="-fx-background-color: #5fc279;"
                text="update" textFill="WHITE">
            <font>
                <Font name="Constantia Italic" size="18.0"/>
            </font>
        </Button>
        <Button fx:id="buttonCancel" alignment="CENTER" maxWidth="750" mnemonicParsing="false" onAction="#backToTable"
                prefHeight="40.0" prefWidth="750" text="cancel" textFill="#0f9ed7">
            <font>
                <Font name="System Italic" size="12.0"/>
            </font>
        </Button>
        <Button fx:id="buttonDelete" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                onAction="#deleteAuthor" prefHeight="36.0" prefWidth="750.0" style="-fx-background-color: #ff6363;"
                text="delete" textFill="WHITE">
            <font>
                <Font name="Constantia Italic" size="18.0"/>
            </font>
        </Button>
    </children>
    <padding>
        <Insets bottom="40.0" left="100.0" right="100.0" top="40.0"/>
    </padding>
</VBox>
